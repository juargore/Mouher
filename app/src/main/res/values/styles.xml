<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/bgGrey</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>


    <!-- Text styles -->
    <style name="TextView.TitlesH1" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">50sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.02</item>
        <item name="android:textColor">@color/onyxBlack</item>
        <item name="android:fontFamily">@font/semibold</item>

    </style>

    <style name="TextView.TitlesH2" parent="TextView.TitlesH1">
        <item name="android:textSize">38sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.02</item>
    </style>

    <style name="TextView.TitlesH3" parent="TextView.TitlesH1">
        <item name="android:textSize">30sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.02</item>
    </style>

    <style name="TextView.TitlesH4" parent="TextView.TitlesH1">
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.015</item>
    </style>

    <style name="TextView.TitlesH5" parent="TextView.TitlesH1">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.01</item>
    </style>

    <style name="TextView.TitlesH6" parent="TextView.TitlesH1">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.0</item>
    </style>

    <style name="TextView.TitlesH7" parent="TextView.TitlesH1">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.0</item>
    </style>
    <!-- End text styles -->

    <!--  TextInputLayout  -->
    <style name="TextInputLayoutAppearanceBlack" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- reference our hint & error styles -->
        <item name="boxCornerRadiusTopStart">2dp</item>
        <item name="boxCornerRadiusTopEnd">2dp</item>
        <item name="boxCornerRadiusBottomStart">2dp</item>
        <item name="boxCornerRadiusBottomEnd">2dp</item>
        <item name="android:textColor">@color/onyxBlack</item>
        <item name="android:textColorHint">@color/textinputlayout_black</item>
        <item name="boxStrokeColor">@color/textinputlayout_black</item>
        <item name="hintTextAppearance">@style/HintTextWhite</item>
        <item name="hintTextColor">@color/textinputlayout_black</item>
        <item name="colorControlNormal">@color/onyxBlack</item>
        <item name="colorControlActivated">@color/onyxBlack</item>
        <item name="colorControlHighlight">@color/onyxBlack</item>
    </style>


    <style name="HintTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textinputlayout_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <!--  TextInputEditText  -->
    <style name="EditTextBlack" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/onyxBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="EditTextWhite" parent="EditTextBlack">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Style for Splash Screen-->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/bgGrey</item>
    </style>

</resources>