<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="view"
            type="com.glass.mouher.ui.store.MainStoreActivity" />
        <variable
            name="viewModel"
            type="com.glass.mouher.ui.store.MainStoreViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout_store"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/container_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        app:contentInsetLeft="0dp"
                        app:contentInsetStart="0dp"
                        app:contentInsetStartWithNavigation="0dp"
                        android:background="@color/onyxBlack">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp">

                            <RelativeLayout android:id="@+id/layoutCart"
                                android:layout_width="66dp"
                                android:layout_height="0dp"
                                android:onClick="@{ viewModel::onCartClick }"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <View android:id="@+id/view8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="1dp"
                                    android:layout_centerInParent="true"
                                    android:layout_centerHorizontal="true" />
                                <ImageView android:id="@+id/imageView13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/bgWhite"
                                    app:srcCompat="@drawable/ic_shopping_cart" />

                                <TextView android:id="@+id/textView32"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_below="@id/view8"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="14dp"
                                    android:background="@drawable/background_circle_pink"
                                    android:backgroundTint="@color/mainRed"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:includeFontPadding="false"
                                    android:text="@{ viewModel.totalProducts }"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    tools:text="0" />

                            </RelativeLayout>

                            <LinearLayout android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:orientation="horizontal"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/layoutCart"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/layoutCart">
                                <ImageView android:id="@+id/imageLogo"
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:paddingTop="10dp"
                                    android:scaleType="fitEnd"
                                    app:srcCompat="@drawable/logo_mouher1" />
                                <View android:id="@+id/view12"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@color/bgWhite" />

                                <ImageView
                                    android:id="@+id/imageView21"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:tint="@color/white"
                                    app:fromUrl="@{ viewModel.urlImageLogo }"
                                    app:srcCompat="@drawable/logo_zara" />
                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.appcompat.widget.Toolbar>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/container_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/container_toolbar"
                    android:layout_centerInParent="true" />

            </RelativeLayout>


        </LinearLayout>

        <fragment
            android:id="@+id/fragment_navigation_drawer_store"
            android:name="com.glass.mouher.ui.menu.MenuFragment"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            tools:ignore="FragmentTagUsage" />

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>