<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.glass.mouher.ui.cart.billing.BillingViewModel" />
        <variable
            name="view"
            type="com.glass.mouher.ui.cart.billing.BillingActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_cart"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            style="@style/TextView.TitlesH4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:includeFontPadding="false"
            android:text="Informaci贸n de Facturaci贸n"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Completa los siguientes datos:"
            android:textColor="@color/mainGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="HardcodedText" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/saveButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView45">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_18dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutAppearanceBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="RFC *"
                    android:theme="@style/TextInputLayoutAppearanceBlack"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextBlack"
                        android:layout_width="match_parent"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:text="@={ viewModel.rfc }" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutAppearanceBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Correo Electr贸nico *"
                    android:theme="@style/TextInputLayoutAppearanceBlack"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextBlack"
                        android:layout_width="match_parent"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:text="@={ viewModel.email }" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutAppearanceBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Nombre o Raz贸n Social *"
                    android:theme="@style/TextInputLayoutAppearanceBlack"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextBlack"
                        android:layout_width="match_parent"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:text="@={ viewModel.social }" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveButton"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:background="@drawable/button_ripple"
            android:letterSpacing="0.3"
            android:onClick="@{ viewModel::onContinueButtonClicked }"
            android:paddingStart="@dimen/margin_18dp"
            android:paddingEnd="@dimen/margin_18dp"
            android:text="PROCESAR PAGO"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView11"
            style="@style/TextView.TitlesH6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:onClick="@{ viewModel::onBackClicked }"
            android:text="Cancelar requerimiento de factura"
            android:textColor="@color/mainGrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{ viewModel.progressVisible ? View.VISIBLE : View.GONE }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>