<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="view"
            type="com.glass.mouher.ui.menu.MenuFragment" />
        <variable
            name="viewModel"
            type="com.glass.mouher.ui.menu.MenuViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView android:id="@+id/textView73"
            style="@style/TextView.TitlesH7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:text="v2.1.0"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintEnd_toEndOf="parent" />
        <LinearLayout android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <View android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E6E6E6" />
            <View android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgWhite" />
        </LinearLayout>
        <ProgressBar android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/onyxBlack"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView android:id="@+id/productImage"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="@dimen/margin_12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/margin_12dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="0.5"
                    app:circleFromResource="@{ viewModel.userPhoto }"
                    tools:srcCompat="@drawable/face" />

                <LinearLayout android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView android:id="@+id/textView3"
                        style="@style/TextView.TitlesH5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:includeFontPadding="false"
                        android:text="Carlos Esparza Cuevas"
                        android:textColor="@color/colorPrimary" />
                    <TextView android:id="@+id/textView2"
                        style="@style/TextView.TitlesH6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:includeFontPadding="false"
                        android:text="102 compras realizadas"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="@dimen/margin_18dp"
                android:background="@drawable/background_stroke_gray_no_filled"
                android:gravity="center_horizontal|center_vertical">

                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvSocialMedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginStart="@dimen/margin_12dp"
                    android:layout_marginEnd="@dimen/margin_12dp"
                    android:orientation="horizontal" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:layout_marginEnd="@dimen/margin_12dp"
                android:layout_marginBottom="@dimen/margin_12dp"
                android:orientation="vertical"
                android:visibility="@{viewModel.searchProductVisibility ? View.VISIBLE : View.GONE}">

                <EditText android:id="@+id/etSearchProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_grey_search"
                    android:drawableEnd="@drawable/ic_search"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Buscar productos..."
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:paddingStart="@dimen/margin_12dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="@dimen/margin_12dp"
                    android:paddingBottom="5dp"
                    android:visibility="@{viewModel.emptyList ? View.GONE : View.VISIBLE}" />
            </LinearLayout>

            <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20sp"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingEnd="@dimen/margin_18dp">

                    <TextView android:id="@+id/textView72"
                        style="@style/TextView.TitlesH6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/regular"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="Mi Perfil"
                        android:onClick="@{ viewModel::onProfileClick }"
                        android:textSize="15sp" />
                    <TextView android:id="@+id/textView70"
                        style="@style/TextView.TitlesH6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="Mis Compras"
                        android:onClick="@{ viewModel::onHistoryClick }"
                        android:textSize="15sp" />

                    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_12dp"
                        android:layout_marginBottom="@dimen/margin_12dp"
                        android:orientation="horizontal">
                        <TextView android:id="@+id/textView63"
                            style="@style/TextView.TitlesH5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="Zonas Comerciales"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <ImageView android:id="@+id/imageView23"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:rotation="90"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_right_arrow" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:items="@{viewModel.items}"
                        app:clickHandler="@{ viewModel }"
                        app:itemViewBinder="@{view.itemViewBinder}" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_12dp"
                        android:orientation="horizontal">
                        <TextView android:id="@+id/textView64"
                            style="@style/TextView.TitlesH5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="Mouher Market"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <ImageView android:id="@+id/imageView24"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:rotation="90"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_right_arrow" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView android:id="@+id/textView66"
                        style="@style/TextView.TitlesH6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/regular"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="Acerca de"
                        android:onClick="@{ viewModel::onAboutClick }"
                        android:textSize="15sp" />

                    <TextView android:id="@+id/textView67"
                        style="@style/TextView.TitlesH6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/regular"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="Contáctanos"
                        android:onClick="@{ viewModel::onContactUsClick }"
                        android:textSize="15sp" />
                    <TextView android:id="@+id/textView68"
                        style="@style/TextView.TitlesH6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/regular"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="Servicios Adicionales"
                        android:onClick="@{ viewModel::onExtraServicesClick }"
                        android:textSize="15sp" />
                    <TextView android:id="@+id/textView69"
                        style="@style/TextView.TitlesH6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/regular"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="Más Información..."
                        android:onClick="@{ viewModel::onMoreInfoClick }"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <TextView android:id="@+id/textView71"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>