<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp">

            <RelativeLayout android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/background_circle_pink"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView android:id="@+id/imgCloseReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_close" />
            </RelativeLayout>
            <TextView android:id="@+id/textView35"
                style="@style/TextView.TitlesH6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observaciones"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/background_stroke_gray_no_filled"
            android:orientation="vertical"
            android:padding="7dp">

            <EditText
                android:id="@+id/etCommentReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Notas *"
                android:inputType="textMultiLine"
                android:paddingBottom="2dp"
                android:textSize="15sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/txtSaveReview"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginStart="@dimen/margin_18dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginEnd="@dimen/margin_18dp"
            android:background="@drawable/button_ripple"
            android:letterSpacing="0.2"
            android:paddingStart="@dimen/margin_18dp"
            android:paddingEnd="@dimen/margin_18dp"
            android:text="ACEPTAR"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <!--<TextView android:id="@+id/txtSaveReview"
            style="@style/TextView.TitlesH6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:gravity="right"
            android:includeFontPadding="true"
            android:paddingEnd="10dp"
            android:text="Aceptar" />-->
    </LinearLayout>
</androidx.cardview.widget.CardView>