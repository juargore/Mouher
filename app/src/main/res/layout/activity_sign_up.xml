<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.glass.mouher.ui.registration.signup.SignUpViewModel" />
        <variable
            name="view"
            type="com.glass.mouher.ui.registration.signup.SignUpActivity" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="24dp"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{ viewModel::onBackClicked }"
                android:padding="20dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView android:id="@+id/title"
                style="@style/TextView.TitlesH5"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingTop="5dp"
                android:text="Registro"
                android:textColor="@color/onyxBlack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/back"
                app:layout_constraintTop_toTopOf="@id/back" />

            <TextView android:id="@+id/subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:text="Por favor ingrese los siguientes datos de forma correcta. Ésto nos ayudará a poder crear una cuenta y pueda comenzar a hacer compras desde la App"
                android:textColor="@color/grey"
                app:layout_constraintBottom_toTopOf="@+id/signupEmailInput"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signupEmailInput"
                style="@style/TextInputLayoutAppearanceBlack"
                android:theme="@style/TextInputLayoutAppearanceBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="Email"
                app:helperText="Ingrese un correo válido"
                app:layout_constraintBottom_toTopOf="@+id/signupPasswordInput"
                app:layout_constraintEnd_toEndOf="@+id/subtitle"
                app:layout_constraintStart_toStartOf="@+id/subtitle"
                app:layout_constraintTop_toBottomOf="@+id/subtitle">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextBlack"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signupPasswordInput"
                android:layout_width="0dp"
                style="@style/TextInputLayoutAppearanceBlack"
                android:theme="@style/TextInputLayoutAppearanceBlack"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="Contraseña"
                app:helperText="Ingrese una contraseña de 8 dígitos"
                app:layout_constraintBottom_toTopOf="@+id/privacyPolicyLabel"
                app:layout_constraintEnd_toEndOf="@+id/subtitle"
                app:layout_constraintStart_toStartOf="@+id/subtitle"
                app:layout_constraintTop_toBottomOf="@+id/signupEmailInput"
                app:passwordToggleDrawable="@drawable/toggle_password"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/onyxBlack">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextBlack"
                    android:layout_width="match_parent"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox android:id="@+id/privacyPolicyCheckbox"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:padding="16dp"
                android:buttonTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/privacyPolicyLabel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/privacyPolicyLabel" />

            <TextView android:id="@+id/privacyPolicyLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="He leído y acepto la Política de Privacidad "
                android:textColor="@color/grey"
                app:layout_constraintBottom_toTopOf="@+id/termsAndConditionsLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/privacyPolicyCheckbox"
                app:layout_constraintTop_toBottomOf="@+id/signupPasswordInput" />

            <CheckBox android:id="@+id/termsAndConditionsCheckbox"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:padding="16dp"
                android:buttonTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/termsAndConditionsLabel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/termsAndConditionsLabel" />

            <TextView android:id="@+id/termsAndConditionsLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="He leído y acepto los Términos y Condiciones"
                android:textColor="@color/grey"
                app:layout_constraintBottom_toTopOf="@+id/backgroundCheckLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/termsAndConditionsCheckbox"
                app:layout_constraintTop_toBottomOf="@+id/privacyPolicyLabel" />

            <CheckBox android:id="@+id/backgroundCheckCheckbox"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:padding="16dp"
                android:buttonTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/backgroundCheckLabel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/backgroundCheckLabel" />

            <TextView android:id="@+id/backgroundCheckLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Autorizo a Mouher App para hacer uso de mis datos personales sólo cuando sea estrictamente requerido"
                android:textColor="@color/grey"
                app:layout_constraintBottom_toTopOf="@+id/signupConfirmButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/backgroundCheckCheckbox"
                app:layout_constraintTop_toBottomOf="@+id/termsAndConditionsLabel" />

            <androidx.appcompat.widget.AppCompatButton android:id="@+id/signinButton"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="@dimen/margin_12dp"
                android:background="@drawable/background_button_rounded"
                android:backgroundTint="@color/onyxBlack"
                android:paddingStart="@dimen/margin_18dp"
                android:paddingEnd="@dimen/margin_18dp"
                android:text="ENVIAR"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/subtitle"
                app:layout_constraintStart_toStartOf="@+id/subtitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
