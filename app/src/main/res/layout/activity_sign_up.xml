<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.glass.mouher.ui.registration.signup.SignUpViewModel" />
        <variable
            name="view"
            type="com.glass.mouher.ui.registration.signup.SignUpActivity" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="56dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{ viewModel::onBackClicked }"
                android:padding="20dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/mainGrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                style="@style/TextView.TitlesH4"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingTop="5dp"
                android:text="Nuevo Registro"
                android:textColor="@color/onyxBlack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/back"
                app:layout_constraintTop_toTopOf="@id/back" />

            <TextView android:id="@+id/subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_18dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="@dimen/margin_18dp"
                android:text="Por favor ingrese los siguientes datos de forma correcta. Ésto nos ayudará a poder crear una cuenta y pueda comenzar a hacer compras desde la App"
                android:textColor="@color/mainGrey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <LinearLayout android:id="@+id/layTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12dp"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_18dp"
                android:paddingEnd="@dimen/margin_18dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitle">

                <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayoutAppearanceBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Nombre(s)"
                    android:theme="@style/TextInputLayoutAppearanceBlack">

                    <com.google.android.material.textfield.TextInputEditText style="@style/EditTextBlack"
                        android:layout_width="match_parent"
                        android:text="@={ viewModel.fullName }"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayoutAppearanceBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Apellido Paterno"
                    android:theme="@style/TextInputLayoutAppearanceBlack">

                    <com.google.android.material.textfield.TextInputEditText style="@style/EditTextBlack"
                        android:layout_width="match_parent"
                        android:text="@={ viewModel.fatherLastName }"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayoutAppearanceBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Apellido Materno"
                    android:theme="@style/TextInputLayoutAppearanceBlack">

                    <com.google.android.material.textfield.TextInputEditText style="@style/EditTextBlack"
                        android:layout_width="match_parent"
                        android:text="@={ viewModel.motherLastName }"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayoutAppearanceBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Correo"
                    android:theme="@style/TextInputLayoutAppearanceBlack">

                    <com.google.android.material.textfield.TextInputEditText style="@style/EditTextBlack"
                        android:layout_width="match_parent"
                        android:text="@={ viewModel.email }"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayoutAppearanceBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_12dp"
                    android:hint="Contraseña"
                    android:theme="@style/TextInputLayoutAppearanceBlack"
                    app:passwordToggleDrawable="@drawable/toggle_password"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/onyxBlack">

                    <com.google.android.material.textfield.TextInputEditText style="@style/EditTextBlack"
                        android:layout_width="match_parent"
                        android:text="@={ viewModel.password }"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_18dp"
                android:paddingEnd="@dimen/margin_18dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layTop">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/privacyPolicyCheckbox"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:buttonTint="@color/colorPrimary"
                        android:checked="@={ viewModel.policyChecked }"
                        android:padding="16dp" />

                    <TextView android:id="@+id/privacyPolicyLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="He leído y acepto la Política de Privacidad "
                        android:textColor="@color/mainGrey" />
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/termsAndConditionsCheckbox"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:buttonTint="@color/colorPrimary"
                        android:checked="@={ viewModel.conditionsChecked }"
                        android:padding="16dp" />

                    <TextView android:id="@+id/termsAndConditionsLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="He leído y acepto los Términos y Condiciones"
                        android:textColor="@color/mainGrey" />
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signinButton"
                android:layout_width="280dp"
                android:layout_height="44dp"
                android:layout_margin="@dimen/margin_12dp"
                android:background="@drawable/button_ripple"
                android:letterSpacing="0.3"
                android:onClick="@{ viewModel::onSendClicked }"
                android:paddingStart="@dimen/margin_18dp"
                android:paddingEnd="@dimen/margin_18dp"
                android:text="ENVIAR"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{ viewModel.progressVisible ? View.VISIBLE : View.GONE }"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
