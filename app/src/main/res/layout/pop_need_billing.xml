<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_12dp">

        <TextView
            android:id="@+id/textView63"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:text="Â¿Requiere factura para esta compra?"
            android:textColor="@color/onyxBlack"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddBilling"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginEnd="@dimen/margin_24dp"
            android:background="@drawable/button_ripple"
            android:letterSpacing="0.2"
            android:text="SI REQUIERO FACTURA"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDiscardBilling"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginEnd="@dimen/margin_24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_ripple"
            android:letterSpacing="0.2"
            android:text="NO REQUIERO FACTURA"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />
    </LinearLayout>
</androidx.cardview.widget.CardView>