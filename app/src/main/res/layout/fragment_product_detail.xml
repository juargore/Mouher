<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="view"
            type="com.glass.mouher.ui.store.home.products.proudctDetail.ProductDetailFragment" />
        <variable
            name="viewModel"
            type="com.glass.mouher.ui.store.home.products.proudctDetail.ProductDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="visible">

                    <ImageView android:id="@+id/imageView7"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        app:fromUrl="@{ viewModel.urlImageTop }"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@drawable/iguana" />

                    <View android:id="@+id/view10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_banner_gradient"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@{ viewModel.subTitleTop }"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toTopOf="@+id/textView27"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="Complementa tu estilo..." />

                    <TextView
                        android:id="@+id/textView27"
                        style="@style/TextView.TitlesH5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{ viewModel.titleTop }"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Accesorios" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_12dp">

                    <ImageButton
                        android:id="@+id/back"
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:onClick="@{ viewModel::onBackClicked }"
                        android:padding="20dp"
                        android:src="@drawable/ic_arrow_back"
                        android:tint="@color/onyxBlack"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/TextView.TitlesH4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:paddingTop="3dp"
                        android:text="@{ viewModel.productName }"
                        android:textSize="20sp"
                        tools:text="Botín suela track" />
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="@dimen/margin_12dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/margin_12dp"
                    android:paddingEnd="@dimen/margin_12dp"
                    android:visibility="visible"
                    android:weightSum="2">

                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvMiniList"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".3"
                        app:items="@{viewModel.items}"
                        app:clickHandler="@{ viewModel }"
                        app:itemViewBinder="@{view.itemViewBinder}" />

                    <com.github.chrisbanes.photoview.PhotoView android:id="@+id/photoView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:background="@color/bgGrey"
                        android:padding="1dp" />
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_12dp"
                    android:layout_marginEnd="@dimen/margin_12dp">

                    <RatingBar android:id="@+id/ratingBar2"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="@{ viewModel.productRating }"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        tools:text="Men's Originals"
                        android:text="@{ viewModel.titleTop }"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="@dimen/margin_12dp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_12dp"
                    android:paddingEnd="@dimen/margin_12dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textView16"
                        style="@style/TextView.TitlesH5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="true"
                        tools:text="$250"
                        android:text="@{ viewModel.currentPrice }"
                        android:textColor="@color/mainPink" />

                    <TextView android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="@string/lorem_ipsum"
                        android:text="@={ viewModel.productDescription }"
                        android:textColor="@color/onyxBlack" />
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:layout_marginBottom="@dimen/margin_18dp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_12dp"
                    android:paddingEnd="@dimen/margin_12dp">

                    <TextView android:id="@+id/textView11"
                        style="@style/TextView.TitlesH6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_12dp"
                        android:includeFontPadding="false"
                        android:text="Cantidad" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="160dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="@dimen/margin_12dp">

                        <ImageView android:id="@+id/imageView22"
                            android:layout_width="40dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/background_stroke_gray_rectangle_filled"
                            android:tint="@color/onyxBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_arrow_drop_down" />

                        <Spinner android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@drawable/background_stroke_gray_no_filled"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Button android:id="@+id/button7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_ripple"
                        android:inputType="textCapWords"
                        android:onClick="@{ viewModel::onAddProductToCartClicked }"
                        android:text="Agregar al carrito"
                        tools:ignore="TextViewEdits" />
                </LinearLayout>

                <TextView style="@style/TextView.TitlesH5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_18dp"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/margin_12dp"
                    android:text="Información Adicional" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_12dp"
                    android:orientation="vertical">

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:background="@drawable/background_stroke_gray_rectangle_filled"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="6dp">
                            <TextView android:id="@+id/textView19"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Colores"
                                android:textColor="@color/onyxBlack" />
                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:background="@drawable/background_stroke_gray_rectangle_filled"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="6dp">
                            <TextView android:id="@+id/textView25"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Rosa, Blanco y Azul"
                                android:textColor="@color/onyxBlack" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:background="@drawable/background_stroke_gray_rectangle_filled"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="6dp">
                            <TextView android:id="@+id/textView26"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Ámbito de entrega"
                                android:textColor="@color/onyxBlack" />
                        </LinearLayout>
                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:background="@drawable/background_stroke_gray_rectangle_filled"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="6dp">
                            <TextView android:id="@+id/textView30"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Sólo Puerto Vallarta y Bahía de Banderas"
                                android:textColor="@color/onyxBlack" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:background="@drawable/background_stroke_gray_rectangle_filled"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="6dp">
                            <TextView android:id="@+id/textView31"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Métodos de Pago"
                                android:textColor="@color/onyxBlack" />
                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:background="@drawable/background_stroke_gray_rectangle_filled"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="6dp">
                            <TextView android:id="@+id/textView32"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Sólo tarjeta de crédito"
                                android:textColor="@color/onyxBlack" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:layout_marginBottom="@dimen/margin_18dp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_12dp"
                    android:paddingEnd="@dimen/margin_12dp">
                    <TextView android:id="@+id/textView40"
                        style="@style/TextView.TitlesH5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_12dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal"
                        android:text="Reseñas" />

                    <TextView android:id="@+id/textView61"
                        style="@style/TextView.TitlesH6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:onClick="@{ viewModel::onAddRatingClicked }"
                        android:text="Califica este producto"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView android:id="@+id/textView13"
                        style="@style/TextView.TitlesH6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_open"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:onClick="@{ viewModel::onReviewsClicked }"
                        android:text="Ver opiniones de los usuarios"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_12dp"
                    android:paddingEnd="@dimen/margin_12dp">

                    <TextView android:id="@+id/textView39"
                        style="@style/TextView.TitlesH5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_12dp"
                        android:gravity="center_horizontal"
                        android:text="También te podría interesar" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRelatedProducts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_12dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ProgressBar android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="gone"
            android:visibility="@{ viewModel.progressVisible ? View.VISIBLE : View.GONE }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>