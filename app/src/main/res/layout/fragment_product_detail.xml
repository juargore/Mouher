                            android:text="@{ viewModel.titleClassificationQty }"
                            android:textColor="@color/mainPink"
                            android:textSize="13sp"
                            tools:text="Total" />
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
