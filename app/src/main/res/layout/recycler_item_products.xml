<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.glass.mouher.ui.store.home.products.ProductsItemViewModel" />
    </data>

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:backgroundTint="#E3E3E3"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">

        <TextView android:id="@+id/textView26"
            style="@style/TextView.TitlesH7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_red_rounded"
            android:elevation="5dp"
            android:includeFontPadding="false"
            android:paddingStart="8dp"
            android:paddingTop="6dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="-15%"
            android:textColor="@color/white"
            android:visibility="visible"
            tools:text="-10%" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:scaleType="fitCenter"
                app:fromUrl="@{viewModel.imageUrl}"
                tools:srcCompat="@drawable/ic_delete" />

            <TextView android:id="@+id/textView25"
                style="@style/TextView.TitlesH6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/regular"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:lines="2"
                android:maxLines="2"
                android:text="@{ viewModel.name }"
                tools:text="Manzana verde" />

            <RatingBar android:id="@+id/ratingBar"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:numStars="5"
                android:rating="3" />

            <TextView android:id="@+id/textView24"
                style="@style/TextView.TitlesH7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/background_green_rounded"
                android:backgroundTint="#A87949"
                android:elevation="5dp"
                android:fontFamily="@font/regular"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:paddingStart="5dp"
                android:paddingTop="4dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                android:text="$ 250 / pza"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="$20.00 / kg" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>