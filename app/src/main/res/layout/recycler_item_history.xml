<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.ocean.mouher.ui.history.HistoryItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="@{ viewModel::onDetailsClicked }"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:elevation="6dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/textView21"
                            style="@style/TextView.TitlesH7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/medium"
                            android:includeFontPadding="true"
                            android:text="@{ viewModel.storeName }"
                            android:textSize="12sp"
                            tools:text="Jolie Blue" />

                        <TextView
                            android:id="@+id/textView20"
                            style="@style/TextView.TitlesH7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:includeFontPadding="true"
                            android:text="@{ viewModel.date }"
                            tools:text="Fecha: 2020-10-10" />

                        <TextView
                            android:id="@+id/textView25"
                            style="@style/TextView.TitlesH7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:includeFontPadding="true"
                            android:text="@{ viewModel.folio }"
                            tools:text="Folio: 1100" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView30"
                                style="@style/TextView.TitlesH7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:includeFontPadding="true"
                                android:text="Estatus envío: "
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textView31"
                                style="@style/TextView.TitlesH7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:includeFontPadding="true"
                                app:textColorAndShadow="@{ viewModel.colorShipmentStatus }"
                                android:text="@{ viewModel.shipmentStatus }"
                                tools:text="Enviado" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@color/lightPink"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:background="@color/lightPink"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Envío:"
                            android:textColor="@color/onyxBlack"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/textView24"
                            style="@style/TextView.TitlesH7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@color/lightPink"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="@{ viewModel.shippingFee }"
                            android:textColor="@color/onyxBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="HardcodedText"
                            tools:text="$ 123.00" />

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:background="@color/lightPink"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Subtotal:"
                            android:textColor="@color/onyxBlack"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/textView23"
                            style="@style/TextView.TitlesH7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@color/lightPink"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="@{ viewModel.subTotalAmount }"
                            android:textColor="@color/onyxBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="HardcodedText"
                            tools:text="$ 123.00" />

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:background="@color/lightPink"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Total:"
                            android:textColor="@color/onyxBlack"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/textView22"
                            style="@style/TextView.TitlesH7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@color/lightPink"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="@{ viewModel.totalAmount }"
                            android:textColor="@color/onyxBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="HardcodedText"
                            tools:text="$ 123.00" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:background="@color/bgGrey"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <!--app:backgroundLayout="@{ viewModel.colorShipmentStatus }"-->

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estatus del pago: "
                        android:textColor="@color/onyxBlack"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView15"
                        style="@style/TextView.TitlesH6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{ viewModel.paymentStatus }"
                        android:textSize="12sp"
                        app:textColorAndShadow="@{ viewModel.colorPaymentStatus }"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>