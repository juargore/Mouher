<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp">

            <RelativeLayout android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/background_circle_pink"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView android:id="@+id/imageView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_close" />
            </RelativeLayout>

            <TextView android:id="@+id/textView35"
                style="@style/TextView.TitlesH6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar reseña"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RatingBar android:id="@+id/ratingBar3"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:numStars="5"
            android:stepSize="0.5" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/background_stroke_gray_no_filled"
            android:orientation="vertical"
            android:padding="7dp">

            <EditText android:id="@+id/editTextTextMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Agregue aquí sus comentarios sobre el producto"
                android:inputType="textMultiLine"
                android:paddingBottom="2dp"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView android:id="@+id/textView37"
            style="@style/TextView.TitlesH6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:gravity="right"
            android:includeFontPadding="true"
            android:paddingEnd="10dp"
            android:text="Guardar reseña" />
    </LinearLayout>
</androidx.cardview.widget.CardView>