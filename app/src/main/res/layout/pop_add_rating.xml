<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp">

            <RelativeLayout android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/background_circle_pink"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgCloseReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_close" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView35"
                style="@style/TextView.TitlesH6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comparte una Reseña"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etNameReview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:background="@drawable/background_grey_subscribe"
                android:ems="10"
                android:hint="Nombre *"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/margin_12dp"
                android:paddingEnd="@dimen/margin_12dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etEmailReview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="@dimen/margin_12dp"
                android:background="@drawable/background_grey_subscribe"
                android:ems="10"
                android:hint="Correo *"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/margin_12dp"
                android:paddingEnd="@dimen/margin_12dp"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">
            <TextView android:id="@+id/textView74"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_12dp"
                android:text="Tu Calificación:"
                android:textColor="@color/onyxBlack" />

            <RatingBar
                android:id="@+id/ratingReview"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="5"
                android:progressTint="@color/mainPink"
                android:stepSize="1.0" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/background_grey_subscribe"
            android:orientation="vertical"
            android:padding="7dp">

            <EditText
                android:id="@+id/etCommentReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Comentarios *"
                android:inputType="textMultiLine"
                android:paddingBottom="2dp"
                android:textSize="15sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/txtSaveReview"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="@dimen/margin_12dp"
            android:background="@drawable/button_ripple"
            android:letterSpacing="0.2"
            android:paddingStart="@dimen/margin_18dp"
            android:paddingEnd="@dimen/margin_18dp"
            android:text="Compartir"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <!--<TextView android:id="@+id/txtSaveReview"
            style="@style/TextView.TitlesH6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:gravity="right"
            android:includeFontPadding="true"
            android:paddingEnd="10dp"
            android:text="Guardar Reseña" />-->
    </LinearLayout>
</androidx.cardview.widget.CardView>