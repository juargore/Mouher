<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="view"
            type="com.glass.mouher.ui.registration.forgot.ForgotPasswordActivity" />
        <variable
            name="viewModel"
            type="com.glass.mouher.ui.registration.forgot.ForgotPasswordViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageButton android:id="@+id/back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{ viewModel::onBackClicked }"
            android:padding="20dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView android:id="@+id/title"
            style="@style/TextView.TitlesH5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginEnd="24dp"
            android:includeFontPadding="true"
            android:paddingTop="2dp"
            android:text="Recuperar Contraseña"
            android:textColor="@color/onyxBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:orientation="vertical">
                <TextView android:id="@+id/forgotPasswordMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Para poder recuperar tu contraseña símplemente ingresa tu correo electrónico en el siguiente cuadro de texto. Una vez pulsado el botón 'Validar' recibirás un mail que te dará indicaciones para obtener una nueva contraseña."
                    android:textColor="@color/grey" />

                <com.google.android.material.textfield.TextInputLayout android:id="@+id/forgotPasswordEmail"
                    style="@style/TextInputLayoutAppearanceBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:hint="Correo electrónico"
                    android:theme="@style/TextInputLayoutAppearanceBlack">

                    <com.google.android.material.textfield.TextInputEditText style="@style/EditTextBlack"
                        android:layout_width="match_parent"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Si no recibes el mensaje, recuerda siempre revisar en tu correo electrónico la sección de 'Spam' y comprobar que no se encuentre en dicha bandeja." />
                <View android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatButton android:id="@+id/forgotButton"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginBottom="@dimen/margin_12dp"
                    android:background="@drawable/background_button_rounded"
                    android:backgroundTint="@color/onyxBlack"
                    android:paddingStart="@dimen/margin_18dp"
                    android:paddingEnd="@dimen/margin_18dp"
                    android:text="Validar"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="21sp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
