<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.glass.mouher.ui.profile.UserProfileItemViewModel" />
    </data>
    <androidx.cardview.widget.CardView android:id="@+id/cardHomeZones"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/imageView10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="25dp"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                app:fromUrl="@{ viewModel.imageUrl }"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <LinearLayout android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:paddingTop="7dp"
                android:paddingBottom="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView style="@style/TextView.TitlesH6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="@{ viewModel.name }"
                    tools:text="Text" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>